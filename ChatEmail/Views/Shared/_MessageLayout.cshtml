@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_MessageHeadComponentPartial")
<body>
	<div id="preloader">
		<div class="loader">
			<svg class="circular" viewBox="25 25 50 50">
				<circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
			</svg>
		</div>
	</div>
	<div id="main-wrapper">
		@await Component.InvokeAsync("_MessageHeaderComponentPartial")
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-body">
							@await Component.InvokeAsync("_MessageBodyComponentPartial")
							@RenderBody()
						</div>
					</div>
				</div>
			</div>
		</div>
		@await Component.InvokeAsync("_MessageFooterComponentPartial")
	</div>
	@await Component.InvokeAsync("_MessageScriptComponentPartial")
</body>
</html>